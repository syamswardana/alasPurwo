<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cubix.alaspurwo.AdapterHutanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageHutan"
            android:layout_width="200px"
            android:layout_height="180px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:background="@android:color/transparent"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:id="@+id/textHutan"
            android:layout_width="350px"
            android:layout_height="150px"
            android:layout_alignBottom="@+id/imageHutan"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/imageHutan"
            android:layout_toRightOf="@+id/imageHutan"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
