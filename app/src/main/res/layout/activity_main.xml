<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:padding="0dp"
    tools:context="com.example.cubix.alaspurwo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_menu_besar"
            android:layout_width="185dp"
            android:layout_height="205dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_menu_besar"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="132dp" />

        <Button
            android:id="@+id/btn_profil"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/btn_menuutama"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_profil" />

        <Button
            android:id="@+id/btn_menuutama"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/btn_bantuan"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/btn_profil"
            android:layout_toRightOf="@+id/btn_profil"
            android:background="@drawable/btn_menu_utama"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="100dp" />

        <Button
            android:id="@+id/btn_bantuan"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_keluar"
            android:layout_toRightOf="@+id/btn_keluar"
            android:background="@drawable/btn_bantuan"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="220dp" />

        <Button
            android:id="@+id/btn_keluar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn_tentang"
            android:layout_toLeftOf="@+id/btn_menuutama"
            android:layout_toStartOf="@+id/btn_menuutama"
            android:background="@drawable/btn_keluar"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/btn_tentang"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn_bantuan"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/btn_keluar"
            android:layout_toRightOf="@+id/btn_keluar"
            android:background="@drawable/btn_tentang"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="254dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
